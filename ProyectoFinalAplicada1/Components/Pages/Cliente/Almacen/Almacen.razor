@page "/Tienda"
@using Microsoft.AspNetCore.Authorization

@rendermode InteractiveServer

@inject ProductosServices productosService
@inject CarritoService carritoService
@inject NavigationManager navigationManager
@inject PageTitleService PageTitleService

@attribute [Authorize(Roles = "Cliente")]

<PageTitle>Almacén Virtual</PageTitle>

<div class="container-fluid mt-4">
    <div class="row">
                <div class="col-4">
                    <label class="form-label text-muted small fw-bold mb-1">Filtrar por Categoria</label>
                     <InputSelect class="form-select input-glass" @bind-Value="Filtro">
                            <option value="Ninguna">Ninguna</option>
                            <option value="Carnes">Carnes</option>
                            <option value="Granos">Granos</option>
                            <option value="Verduras">Verduras</option>
                            <option value="Vegetales">Vegetales</option>
                            <option value="Ensaladas">Ensaladas</option>
                            <option value="Frutas">Frutas</option>
                            <option value="Sazones">Sazones</option>
                            <option value="Víveres">Víveres</option>
                        </InputSelect>
                </div>
               
                <div class="col-md-4">
                    <label class="form-label text-muted small fw-bold mb-1">Buscar</label>
                    <div class="input-group">
                        <input class="form-control input-glass" @bind="ValorFiltro" placeholder="Nombre del Producto..." />
                        <button type="button" class="btn btn-outline-success bi bi-search" @onclick="Buscar"></button>
                        <button type="button" class="btn btn-outline-secondary bi bi-arrow-counterclockwise" @onclick="Restablecer" title="Limpiar"></button>
                    </div>
                </div>
        
    </div>
    <div class="row">

        <div class="col-lg-8 mt-4">
            <div class="row">
                @foreach (var prod in ListaProductos)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card card-glass h-100 border-0 shadow-sm product-card">
                            
                            <div class="text-center p-3 bg-light rounded-top position-relative" style="height: 160px;">
                                <img src="/imagenes/Logo.png" class="img-fluid" style="max-height: 100%; object-fit: contain; opacity: 0.8;" />
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold text-dark">@prod.NombreProducto</h5>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="badge bg-secondary bg-opacity-25 text-dark border border-secondary border-opacity-25">
                                        @prod.UnidadMedida
                                    </span>
                                    <h5 class="text-success fw-bold m-0">@prod.Precio.ToString("C0")</h5>
                                </div>

                                <div class="mt-auto pt-3">
                                    <button class="btn btn-gradiente w-100 shadow-sm" @onclick="() => AgregarAlCarrito(prod)">
                                        <i class="bi bi-cart-plus"></i> Agregar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-glass sticky-top shadow-lg" style="top: 20px; transition: all 0.3s ease;">
                
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center border-bottom border-success border-opacity-25">
                    <div class="fw-bold text-success">
                        <i class="bi bi-basket-fill"></i> Tu Canasta (@carritoService.Carrito.Sum(x => x.Cantidad))
                    </div>
                   
                    <button class="btn btn-sm btn-outline-success border-0" @onclick="ToggleCarrito">
                        @if (carritoExpandido)
                        {
                            <i class="bi bi-dash-lg"></i> <small>Minimizar</small>
                        }
                        else
                        {
                            <i class="bi bi-plus-lg"></i> <small>Ver Detalles</small>
                        }
                    </button>
                </div>

                @if (carritoExpandido)
                {
                    <div class="card-body" style="max-height: 60vh; overflow-y: auto;">
                        @if (carritoService.Carrito.Any())
                        {
                            <ul class="list-group list-group-flush mb-3">
                                @foreach (var item in carritoService.Carrito)
                                {
                                    <li class="list-group-item bg-transparent px-0 border-bottom border-secondary border-opacity-10">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="fw-bold text-dark">@item.Producto?.NombreProducto</span>
                                            <span class="text-success fw-bold">@item.Importe.ToString("C0")</span>
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group btn-group-sm shadow-sm" role="group">
                                                <button type="button" class="btn btn-light border" @onclick="() => DisminuirCantidad(item)">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <span class="btn btn-light border-top border-bottom disabled text-dark fw-bold" style="width: 40px; background-color: #fff;">
                                                    @item.Cantidad
                                                </span>
                                                <button type="button" class="btn btn-light border" @onclick="() => AumentarCantidad(item)">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>

                                            <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => EliminarItem(item)" title="Eliminar">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-cart-x fs-1 opacity-50"></i>
                                <p class="mt-2 mb-0">Tu carrito está vacío.</p>
                            </div>
                        }
                    </div>
                }

                
                <div class="card-footer bg-transparent border-top border-success border-opacity-25 pt-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="text-muted m-0">Total:</h5>
                        <h4 class="text-success fw-bold m-0">@carritoService.ObtenerTotal().ToString("C2")</h4>
                    </div>

                    @if (carritoService.Carrito.Any())
                    {
                        <button class="btn btn-gradiente w-100 py-2 fs-5 shadow" @onclick="IrAPagar">
                            Procesar Pedido <i class="bi bi-arrow-right-circle-fill ms-1"></i>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public List<Producto> ListaProductos { get; set; } = new List<Producto>();


    private bool carritoExpandido = true;
    public string ValorFiltro { get; set; } = string.Empty;
    public string Filtro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle("Tienda");

        await Restablecer();

    }

    private async Task Buscar()
    {
        var lista = await productosService.Listar(p => p.ProductoId > 0);


        if (!string.IsNullOrWhiteSpace(ValorFiltro) && Filtro.Equals("Ninguna"))
        {
            lista = lista.Where(p => p.NombreProducto.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
        }
        else if(string.IsNullOrWhiteSpace(ValorFiltro) && !Filtro.Equals("Ninguna"))
        {
            lista = lista.Where(p => p.Categoria.Contains(Filtro, StringComparison.OrdinalIgnoreCase)).ToList();
        }
        else if(!string.IsNullOrWhiteSpace(ValorFiltro) && !Filtro.Equals("Ninguna"))
        {
            lista = lista.Where((p => p.Categoria.Contains(Filtro, StringComparison.OrdinalIgnoreCase)
            && p.NombreProducto.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase) )).ToList();

        }

        lista = lista.Where(predicate => predicate.Existencia > 0).ToList();

        ListaProductos = lista;

    }

    private async Task Restablecer()
    {
        ValorFiltro = string.Empty;
        Filtro = "Ninguna";
        await Buscar();
    }
    private void ToggleCarrito()
    {
        carritoExpandido = !carritoExpandido;
    }

    private void AgregarAlCarrito(Producto prod)
    {
        var itemExistente = carritoService.Carrito.FirstOrDefault(p => p.ProductoId == prod.ProductoId);

        if (itemExistente != null)
        {
            itemExistente.Cantidad++;
            itemExistente.Importe = itemExistente.Cantidad * itemExistente.PrecioUnitario;
        }
        else
        {
            var item = new PedidoDetalle
            {
                ProductoId = prod.ProductoId,
                Producto = prod,
                Cantidad = 1,
                PrecioUnitario = prod.Precio,
                Importe = prod.Precio
            };
            carritoService.AgregarItem(item);
            
            
            if (!carritoExpandido) carritoExpandido = true;
        }
    }

    private void AumentarCantidad(PedidoDetalle item)
    {
        item.Cantidad++;
        item.Importe = item.Cantidad * item.PrecioUnitario;
    }

    private void DisminuirCantidad(PedidoDetalle item)
    {
        if (item.Cantidad > 1)
        {
            item.Cantidad--;
            item.Importe = item.Cantidad * item.PrecioUnitario;
        }
        else
        {
            EliminarItem(item);
        }
    }

    private void EliminarItem(PedidoDetalle item)
    {
        carritoService.Carrito.Remove(item);
    }

    private void IrAPagar()
    {
        navigationManager.NavigateTo("/PedidoCliente/Create");
    }
}
@page "/Tienda"

@rendermode InteractiveServer

@inject ProductosServices productosService
@inject CarritoService carritoService
@inject NavigationManager navigationManager

<PageTitle>Almacén Virtual</PageTitle>

<div class="container-fluid mt-4">
    <div class="row">
        
        <div class="col-lg-8">
            <div class="row">
                @foreach (var prod in ListaProductos)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card card-glass h-100 border-0 shadow-sm product-card">
                            <div class="text-center p-3 bg-light rounded-top position-relative" style="height: 160px;">
                                <img src="@ObtenerImagen(prod.NombreProducto)" class="img-fluid" style="max-height: 100%; object-fit: contain;" />
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold">@prod.NombreProducto</h5>
                                <div class="d-flex justify-content-between">
                                    <small class="text-muted">@prod.UnidadMedida</small>
                                    <h5 class="text-success fw-bold">@prod.Precio.ToString("C0")</h5>
                                </div>
                                <button class="btn btn-gradiente w-100 mt-3" @onclick="() => AgregarAlCarrito(prod)">
                                    <i class="bi bi-cart-plus"></i> Agregar
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

       
        <div class="col-lg-4">
            <div class="card card-glass sticky-top" style="top: 20px;">
                <div class="card-header bg-transparent fw-bold text-success">
                    <i class="bi bi-basket"></i> Resumen de Compra
                </div>
                <div class="card-body">
                    @if (carritoService.Carrito.Any())
                    {
                        <ul class="list-group list-group-flush mb-3">
                            @foreach (var item in carritoService.Carrito)
                            {
                                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0">
                                    <div>
                                        <span class="fw-bold">@item.Producto?.NombreProducto</span>
                                        <small class="d-block text-muted">x @item.Cantidad</small>
                                    </div>
                                    <span class="text-success fw-bold">@item.Importe.ToString("C0")</span>
                                </li>
                            }
                        </ul>
                        <div class="d-flex justify-content-between border-top pt-3 mb-3">
                            <h4>Total:</h4>
                            <h4 class="text-success fw-bold">@carritoService.ObtenerTotal().ToString("C2")</h4>
                        </div>

                       
                        <button class="btn btn-gradiente w-100 py-2 fs-5" @onclick="IrAPagar">
                            Ir a Pagar <i class="bi bi-arrow-right"></i>
                        </button>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">Tu carrito está vacío.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public List<Producto> ListaProductos { get; set; } = new List<Producto>();

    protected override async Task OnInitializedAsync()
    {
        ListaProductos = await productosService.Listar(p => p.Existencia > 0);
    }

    private void AgregarAlCarrito(Producto prod)
    {
        
        var item = new PedidoDetalle
        {
            ProductoId = prod.ProductoId,
            Producto = prod, 
            Cantidad = 1,
            PrecioUnitario = prod.Precio,
            Importe = prod.Precio
        };
        carritoService.AgregarItem(item);
    }

    private void IrAPagar()
    {
        

        navigationManager.NavigateTo("/PedidoCliente/Create");
    }

    private string ObtenerImagen(string nombre) => "/imagenes/Logo.png"; 
}
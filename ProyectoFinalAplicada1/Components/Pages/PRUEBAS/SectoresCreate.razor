@page "/Sectores/Create"
@page "/Sectores/Edit/{SectorId:int}"

@using Microsoft.AspNetCore.Authorization

@inject ConfiguracionService configService
@inject NavigationManager navigationManager

@inject PageTitleService PageTitleService

@rendermode InteractiveServer
@attribute [Authorize(Roles = "Administrador")]

<PageTitle>@(SectorId > 0 ? "Editar" : "Crear") Sector</PageTitle>

<div class="container">
    <div class="card card-glass rounded-4 p-2 shadow-sm mx-auto" style="max-width: 600px;">

        <div class="card-header bg-transparent border-0 text-center pb-0">
            <h4 class="fw-bold text-success">
                <i class="bi @(SectorId > 0 ? "bi-pencil-square" : "bi-plus-circle")"></i>
                @(SectorId > 0 ? "Editar Dirección" : "Nueva Dirección")
            </h4>
        </div>

        <EditForm Model="Sector" OnValidSubmit="Guardar" FormName="GestionSectores">
            <DataAnnotationsValidator />

            <div class="card-body">

                @* Municipio *@
                <div class="mb-4">
                    <label class="form-label text-muted fw-bold small">MUNICIPIO</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-success"><i class="bi bi-geo-alt"></i></span>
                        <InputSelect class="form-select input-glass border-start-0" @bind-Value="Sector.Municipio">
                            <option value="" selected disabled>Seleccione Municipio...</option>
                            <option value="El Factor">El Factor</option>
                            <option value="Nagua">Nagua</option>
                            <option value="Cabrera">Cabrera</option>
                            <option value="Río San Juan">Río San Juan</option>
                        </InputSelect>
                    </div>
                    <ValidationMessage For="() => Sector.Municipio" />
                </div>

                @* Nombre del Sector *@
                <div class="mb-4">
                    <label class="form-label text-muted fw-bold small">NOMBRE DEL SECTOR / BARRIO</label>
                    <InputText class="form-control input-glass" @bind-Value="Sector.Nombre" placeholder="Ej: Pueblo Nuevo, El Barro..." />
                    <ValidationMessage For="() => Sector.Nombre" />
                </div>


            </div>

            <div class="card-footer bg-transparent border-0 d-flex justify-content-between pb-3 px-4">
                <a href="/Sectores/Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <button type="submit" class="btn btn-gradiente px-5 shadow-sm">
                    <i class="bi bi-check-circle-fill me-2"></i> Guardar
                </button>
            </div>

        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public int SectorId { get; set; }

    [SupplyParameterFromForm]
    public Sector Sector { get; set; } = new Sector();

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle(SectorId > 0 ? "Editar Sector" : "Crear Sector");

        if (SectorId > 0)
        {
            // Buscamos para editar
            var encontrado = await configService.BuscarSector(SectorId);
            if (encontrado != null)
            {
                Sector = encontrado;
            }
            else
            {
             
                navigationManager.NavigateTo("/Sectores/Index");
            }
        }
    }

    public async Task Guardar()
    {
        var guardado = await configService.GuardarSector(Sector);

        if (guardado)
        {
           
            navigationManager.NavigateTo("/Sectores/Index");
        }

    }
}
@page "/Sectores/Index"
@using Microsoft.AspNetCore.Authorization


@inject ConfiguracionService configService
@inject NavigationManager navigationManager
@inject PageTitleService PageTitleService


@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Direcciones de Entrega</PageTitle>

<div class="container">
    <div class="card card-glass rounded-4 p-3 shadow-lg">

        <div class="card-header bg-transparent border-0 pb-0 d-flex justify-content-between align-items-center mb-3">
            <div>
                <h4 class="fw-bold text-success"><i class="bi bi-geo-alt-fill"></i> Sectores y Direcciones</h4>
                <p class="text-muted small mb-0">Gestione los lugares donde se realizan entregas.</p>
            </div>

            <a href="/Sectores/Create" class="btn btn-gradiente px-4 shadow-sm">
                <i class="bi bi-plus-lg"></i> Nuevo Sector
            </a>
        </div>

        <div class="card-body">
            @if (Cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-success" role="status"></div>
                </div>
            }
            else if (!ListaSectores.Any())
            {
                <div class="alert alert-info text-center">
                    No hay sectores registrados. ¡Agregue uno para empezar!
                </div>
            }
            else
            {
                <div class="table-responsive rounded-3 border">
                    <table class="table table-hover bg-transparent align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4">Municipio</th>
                                <th>Sector / Barrio</th>
                                <th class="text-center">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ListaSectores)
                            {
                                <tr style="border-bottom: 1px solid rgba(0,0,0,0.05);">
                                    <td class="ps-4">
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                                            <i class="bi bi-map"></i> @item.Municipio
                                        </span>
                                    </td>
                                    <td class="fw-bold text-dark">@item.Nombre</td>

                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="/Sectores/Edit/@item.SectorId" class="btn btn-sm btn-outline-primary border-0" title="Editar">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => Eliminar(item)" title="Eliminar">
                                                <i class="bi bi-trash3 fs-5"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="card-footer bg-transparent border-0 text-muted small ps-4">
            Total Registros: @ListaSectores.Count
        </div>
    </div>
</div>

@code {
    public List<Sector> ListaSectores { get; set; } = new();
    public bool Cargando { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle("Sectores");
        await Cargar();
    }

    async Task Cargar()
    {
        Cargando = true;
        ListaSectores = await configService.ListarSectores();
        Cargando = false;
    }

    async Task Eliminar(Sector sector)
    {
        // Aquí podrías poner una confirmación con SweetAlert o JS si quisieras
        var eliminado = await configService.EliminarSector(sector.SectorId);
        if (eliminado)
        {
           
            await Cargar();
        }
        
    
    }
}
@page "/Abono/Index"
@using Microsoft.AspNetCore.Authorization



@inject AbonosService abonosService
@inject NavigationManager navigationManager
@inject PageTitleService PageTitleService

@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Cuentas por Cobrar</PageTitle>

<div class="container">
    <div class="card card-glass rounded-4 p-3 shadow-lg">

        <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="fw-bold text-primary"><i class="bi bi-journal-text"></i> Cuentas por Cobrar (CXC)</h4>
                <p class="text-muted small mb-0">Gestión de deudas empresariales</p>
            </div>
            <div class="text-end">
                <h5 class="fw-bold text-danger m-0">Total en la Calle:</h5>
                <span class="fs-5">RD$ @ListaDeudas.Sum(x => x.DeudaPendiente).ToString("N2")</span>
            </div>
        </div>

        <div class="card-body">
            @if (Cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 text-muted">Calculando deudas...</p>
                </div>
            }
            else if (!ListaDeudas.Any())
            {
                <div class="alert alert-success text-center shadow-sm">
                    <i class="bi bi-check-circle-fill fs-4 d-block mb-2"></i>
                    <strong>¡Excelente!</strong> No hay deudas pendientes en este momento.
                </div>
            }
            else
            {
                <div class="table-responsive rounded-3 border">
                    <table class="table table-hover bg-transparent align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4">Cliente / Empresa</th>
                                <th class="text-end">Límite / Total Comprado</th>
                                <th class="text-end">Total Abonado</th>
                                <th class="text-end fw-bold text-danger">Deuda Pendiente</th>
                                <th class="text-center">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ListaDeudas)
                            {
                                <tr style="border-bottom: 1px solid rgba(0,0,0,0.05);">
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@item.Cliente.NombreCliente</div>
                                        <div class="small text-muted"><i class="bi bi-telephone"></i> @item.Cliente.TelefonoCliente</div>
                                    </td>

                                    <td class="text-end text-muted">
                                        @item.TotalCredito.ToString("N2")
                                    </td>

                                    <td class="text-end text-success">
                                        @item.TotalPagado.ToString("N2")
                                    </td>

                                    <td class="text-end">
                                        @if (item.DeudaPendiente > 0)
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger fs-6 px-3 border border-danger border-opacity-25">
                                                RD$ @item.DeudaPendiente.ToString("N2")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success text-white">Pagado</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @* BOTÓN QUE LLEVA AL CREAR CON EL ID PRESELECCIONADO *@
                                        <a href="/Abono/Create/@item.Cliente.ClienteId" class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm">
                                            <i class="bi bi-cash-coin"></i> Abonar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    public List<ClienteDeudaDTO> ListaDeudas { get; set; } = new();
    public bool Cargando { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle("Cuentas por Cobrar");
        // Cargamos la lista especial desde el servicio
        ListaDeudas = await abonosService.ObtenerReporteDeudas();
        Cargando = false;
    }
}
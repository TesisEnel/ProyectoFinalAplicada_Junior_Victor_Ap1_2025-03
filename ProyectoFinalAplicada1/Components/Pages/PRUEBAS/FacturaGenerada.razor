@page "/Factura/Details/{PedidoId:int}"

@inject PedidosServices pedidosService
@inject NavigationManager navigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Factura @(FacturaActual?.CodigoFactura ?? "Detalle")</PageTitle>

@if (PedidoActual == null)
{
    <div class="alert alert-info text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p>Cargando datos de la factura...</p>
    </div>
}
else
{
    <div class="container my-4">
        <div class="d-flex justify-content-between mb-3 d-print-none">
            <a href="/Pedido/Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            <button class="btn btn-primary" @onclick="Imprimir">
                <i class="bi bi-printer"></i> Imprimir Factura
            </button>
        </div>

        <div class="card shadow-lg border-0 factura-sheet">
            <div class="card-body p-5">

                <div class="row border-bottom pb-4 mb-4">
                    <div class="col-md-6">
                        <h2 class="text-primary fw-bold text-uppercase">Factura</h2>

                        <div class="text-dark fs-4 fw-bold mb-1">Pollera Los Dos Carnales</div>
                        <div class="text-muted small">
                            Calle 27 de Febrero, Los Mangos<br />
                            El Factor, María Trinidad Sánchez<br />
                            RNC: N/A
                        </div>
                    </div>

                    <div class="col-md-6 text-end">
                        <h4 class="mb-1 text-secondary">Nº @(FacturaActual?.CodigoFactura ?? "PENDIENTE")</h4>
                        <div class="text-muted">Fecha: @(FacturaActual?.FechaEmision.ToShortDateString() ?? DateTime.Now.ToShortDateString())</div>
                        <div class="badge bg-success mt-2">Estado: @PedidoActual.Estado</div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-secondary text-uppercase fw-bold mb-2">Facturado a:</h6>
                        <h5 class="fw-bold mb-1">@PedidoActual.Cliente?.NombreCliente @PedidoActual.Cliente?.ApellidoCliente</h5>
                        <p class="mb-0 text-muted small"><i class="bi bi-geo-alt"></i> @PedidoActual.Cliente?.CalleCliente, @PedidoActual.Cliente?.Sector</p>
                        <p class="mb-0 text-muted small"><i class="bi bi-telephone"></i> @PedidoActual.Cliente?.TelefonoCliente</p>
                    </div>
                </div>

                <div class="table-responsive mb-4">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th>Descripción</th>
                                <th class="text-center">Cant.</th>
                                <th class="text-end">Precio Unit.</th>
                                <th class="text-end">Importe</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in PedidoActual.Detalles)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold text-dark">@detalle.Producto?.NombreProducto</span>
                                   
                                    </td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">@detalle.PrecioUnitario.ToString("C2")</td>
                                    <td class="text-end">@detalle.Importe.ToString("C2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row justify-content-end">
                    <div class="col-md-5">
                        <div class="border-top pt-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Subtotal:</span>
                                <span>@((PedidoActual.MontoTotal / 1.18).ToString("C2"))</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">ITBIS (18%):</span>
                                <span>@((PedidoActual.MontoTotal - (PedidoActual.MontoTotal / 1.18)).ToString("C2"))</span>
                            </div>
                            <div class="d-flex justify-content-between border-top border-2 pt-2 mt-2 bg-light p-2 rounded">
                                <span class="h5 fw-bold mb-0">TOTAL:</span>
                                <span class="h5 fw-bold text-primary mb-0">@PedidoActual.MontoTotal.ToString("C2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-5 pt-4 text-center border-top text-muted small">
                    <p class="mb-0">Gracias por preferir a <strong>Pollera Los Dos Carnales</strong>.</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int PedidoId { get; set; }

    public Pedido? PedidoActual { get; set; }
    public Factura? FacturaActual { get; set; }

    protected override async Task OnInitializedAsync()
    {
        PedidoActual = await pedidosService.Buscar(PedidoId);

        if (PedidoActual != null)
        {
            FacturaActual = await pedidosService.BuscarFacturaPorPedido(PedidoId);
        }
    }

    private async Task Imprimir()
    {
        await JSRuntime.InvokeVoidAsync("print");
    }
}
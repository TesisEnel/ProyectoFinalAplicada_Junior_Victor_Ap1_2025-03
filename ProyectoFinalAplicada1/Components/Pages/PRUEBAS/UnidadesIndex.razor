@page "/Unidades/Index"

@inject ConfiguracionService configService
@inject NavigationManager navigationManager
@inject PageTitleService PageTitleService

@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Unidades de Medida</PageTitle>

<div class="container">
    <div class="card card-glass rounded-4 p-3 shadow-lg">

        <div class="card-header bg-transparent border-0 pb-0 d-flex justify-content-between align-items-center mb-3">
            <div>
                <h4 class="fw-bold text-primary"><i class="bi bi-rulers"></i> Unidades de Medida</h4>
                <p class="text-muted small mb-0">Defina cómo se venden sus productos (Libras, Cajas, etc).</p>
            </div>

            <a href="/Unidades/Create" class="btn btn-gradiente px-4 shadow-sm">
                <i class="bi bi-plus-lg"></i> Nueva Unidad
            </a>
        </div>

        <div class="card-body">
            @if (Cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            }
            else if (!ListaUnidades.Any())
            {
                <div class="alert alert-info text-center">
                    No hay unidades registradas.
                </div>
            }
            else
            {
                <div class="table-responsive rounded-3 border">
                    <table class="table table-hover bg-transparent align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4">Descripción</th>
                                <th class="text-center">Abreviatura</th>
                                <th class="text-center">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ListaUnidades)
                            {
                                <tr style="border-bottom: 1px solid rgba(0,0,0,0.05);">
                                    <td class="ps-4 fw-bold text-dark">@item.Descripcion</td>

                                    <td class="text-center">
                                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                                            @item.Abreviatura
                                        </span>
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="/Unidades/Edit/@item.UnidadId" class="btn btn-sm btn-outline-primary border-0" title="Editar">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => Eliminar(item)" title="Eliminar">
                                                <i class="bi bi-trash3 fs-5"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="card-footer bg-transparent border-0 text-muted small ps-4">
            Total Registros: @ListaUnidades.Count
        </div>
    </div>
</div>

@code {
    public List<UnidadMedida> ListaUnidades { get; set; } = new();
    public bool Cargando { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle("Unidades");
        await Cargar();
    }

    async Task Cargar()
    {
        Cargando = true;
        ListaUnidades = await configService.ListarUnidades();
        Cargando = false;
    }

    async Task Eliminar(UnidadMedida unidad)
    {
        var eliminado = await configService.EliminarUnidad(unidad.UnidadId);
        if (eliminado)
        {
           
            await Cargar();
        }
      
    }
}
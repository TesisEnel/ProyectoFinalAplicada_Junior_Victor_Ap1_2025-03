@page "/Unidades/Create"
@page "/Unidades/Edit/{UnidadId:int}"

@inject ConfiguracionService configService
@inject NavigationManager navigationManager
@inject PageTitleService PageTitleService

@rendermode InteractiveServer
@attribute [Authorize(Roles = "Administrador")]

<PageTitle>@(UnidadId > 0 ? "Editar" : "Crear") Unidad</PageTitle>

<div class="container">
    <div class="card card-glass rounded-4 p-2 shadow-sm mx-auto" style="max-width: 500px;">
        
        <div class="card-header bg-transparent border-0 text-center pb-0">
            <h4 class="fw-bold text-primary">
                <i class="bi @(UnidadId > 0 ? "bi-pencil-square" : "bi-plus-circle")"></i> 
                @(UnidadId > 0 ? "Editar Unidad" : "Nueva Unidad")
            </h4>
        </div>

        @* IMPORTANTE: FormName único para evitar el error de POST *@
        <EditForm Model="Unidad" OnValidSubmit="Guardar" FormName="GestionUnidades">
            <DataAnnotationsValidator />

            <div class="card-body">
                
                @* Descripción *@
                <div class="mb-4">
                    <label class="form-label text-muted fw-bold small">DESCRIPCIÓN</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-tag"></i></span>
                        <InputText class="form-control input-glass border-start-0" @bind-Value="Unidad.Descripcion" placeholder="Ej: Libra, Caja, Saco..." />
                    </div>
                    <ValidationMessage For="() => Unidad.Descripcion" />
                </div>

                @* Abreviatura *@
                <div class="mb-4">
                    <label class="form-label text-muted fw-bold small">ABREVIATURA</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-fonts"></i></span>
                        <InputText class="form-control input-glass border-start-0" @bind-Value="Unidad.Abreviatura" placeholder="Ej: LB, CJ, UNID..." />
                    </div>
                    <ValidationMessage For="() => Unidad.Abreviatura" />
                    <small class="text-muted">Se mostrará en la tienda y facturas.</small>
                </div>

            </div>

            <div class="card-footer bg-transparent border-0 d-flex justify-content-between pb-3 px-4">
                <a href="/Unidades/Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <button type="submit" class="btn btn-gradiente px-5 shadow-sm">
                    <i class="bi bi-check-circle-fill me-2"></i> Guardar
                </button>
            </div>

        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public int UnidadId { get; set; }

    [SupplyParameterFromForm]
    public UnidadMedida Unidad { get; set; } = new UnidadMedida();

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle(UnidadId > 0 ? "Editar Unidad" : "Crear Unidad");

        if (UnidadId > 0)
        {
            var encontrada = await configService.BuscarUnidad(UnidadId);
            if (encontrada != null)
            {
                Unidad = encontrada;
            }
            else
            {
                
                navigationManager.NavigateTo("/Unidades/Index");
            }
        }
    }

    public async Task Guardar()
    {
        var guardado = await configService.GuardarUnidad(Unidad);

        if (guardado)
        {
           
            navigationManager.NavigateTo("/Unidades/Index");
        }
        
    }
}
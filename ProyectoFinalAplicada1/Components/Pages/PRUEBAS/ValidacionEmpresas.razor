@page "/Admin/ValidacionEmpresas"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using ProyectoFinalAplicada1.Data

@inject AdminEmpresasService adminService
@inject NavigationManager navigationManager

@inject PageTitleService PageTitleService

@rendermode InteractiveServer
@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Validación de Empresas</PageTitle>

<div class="container">
    <div class="card card-glass rounded-4 p-3 shadow-lg">

        <div class="card-header bg-transparent border-0 pb-0 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="fw-bold text-success"><i class="bi bi-building-check"></i> Validación de Crédito</h4>
                <p class="text-muted small">Gestione qué empresas tienen permiso para comprar a crédito.</p>
            </div>
            <span class="badge bg-success bg-opacity-25 text-success fs-6 px-3 py-2 border border-success">
                Total Empresas: @ListaEmpresas.Count
            </span>
        </div>

        <div class="card-body">
            @if (Cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-success" role="status"></div>
                    <p class="mt-2 text-muted">Cargando empresas...</p>
                </div>
            }
            else if (!ListaEmpresas.Any())
            {
                <div class="alert alert-warning text-center">
                    No hay empresas registradas en el sistema.
                </div>
            }
            else
            {
                <div class="table-responsive rounded-3 border" style="min-height: 200px;">
                    <table class="table table-hover bg-transparent align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-3">Razón Social / RNC</th>
                                <th>Contacto</th>
                                <th>Teléfono</th>
                                <th class="text-center">Estado Actual</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var empresa in ListaEmpresas)
                            {
                                <tr style="border-bottom: 1px solid rgba(0,0,0,0.05);">
                                    <td class="ps-3">
                                        <div class="fw-bold text-dark">@(empresa.RazonSocial ?? "Sin Nombre")</div>
                                        <small class="text-muted"><i class="bi bi-postcard"></i> @(empresa.RNC ?? "N/A")</small>
                                    </td>
                                    <td>
                                        <div>@(empresa.NombreCliente ?? "Sin Contacto")</div>
                                        <small class="text-muted">@empresa.Email</small>
                                    </td>
                                    <td>@(empresa.TelefonoNegocio ?? "N/A")</td>

                                    <td class="text-center">
                                        @switch (empresa.EstadoCredito)
                                        {
                                            case "Aprobado":
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Disponible</span>
                                                break;
                                            case "Investigacion":
                                                <span class="badge bg-warning text-dark"><i class="bi bi-search"></i> En Revisión</span>
                                                break;
                                            case "Rechazado":
                                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rechazado</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary"><i class="bi bi-hourglass"></i> Pendiente</span>
                                                break;
                                        }
                                    </td>

                                   
                                    <td class="text-center position-relative">
                                        <div class="dropdown">
                                         
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                                    type="button"
                                                    @onclick="() => ToggleDropdown(empresa.Id)"
                                                    @onfocusout="() => CerrarDropdownConRetraso()">
                                                <i class="bi bi-pencil-square"></i> Validar
                                            </button>

                                           
                                            <ul class="dropdown-menu shadow border-0 @(DropdownAbiertoId == empresa.Id ? "show" : "")"
                                                style="right: 0; left: auto; z-index: 1000;">

                                                <li><h6 class="dropdown-header">Cambiar estado a:</h6></li>
                                                <li>
                                                    <button class="dropdown-item text-success" @onclick='() => CambiarEstado(empresa, "Aprobado")'>
                                                        <i class="bi bi-check-lg"></i> Aprobar Crédito
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item text-warning" @onclick='() => CambiarEstado(empresa, "Investigacion")'>
                                                        <i class="bi bi-search"></i> En Investigación
                                                    </button>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <button class="dropdown-item text-danger" @onclick='() => CambiarEstado(empresa, "Rechazado")'>
                                                        <i class="bi bi-ban"></i> Rechazar
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    public List<ApplicationUser> ListaEmpresas { get; set; } = new();
    public bool Cargando { get; set; } = true;

    
    public string? DropdownAbiertoId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle("Validar Empresas");
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        Cargando = true;
        ListaEmpresas = await adminService.ListarEmpresas();
        Cargando = false;
    }

    
    private void ToggleDropdown(string id)
    {
        if (DropdownAbiertoId == id)
            DropdownAbiertoId = null; 
        else
            DropdownAbiertoId = id;
    }

   
    private async Task CerrarDropdownConRetraso()
    {
        await Task.Delay(200); 
        DropdownAbiertoId = null;
    }

    private async Task CambiarEstado(ApplicationUser empresa, string nuevoEstado)
    {
        var exito = await adminService.CambiarEstado(empresa.Id, nuevoEstado);

        if (exito)
        {
            empresa.EstadoCredito = nuevoEstado;
            DropdownAbiertoId = null; 
        }
      
    }
}
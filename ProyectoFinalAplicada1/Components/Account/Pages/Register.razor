@page "/Account/Register"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using ProyectoFinalAplicada1.Data
@inject ProyectoFinalAplicada1.DAL.Context DbContext
@inject PageTitleService PageTitleService

@inject UserManager<ApplicationUser> UserManager
@inject IUserStore<ApplicationUser> UserStore
@inject SignInManager<ApplicationUser> SignInManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject ILogger<Register> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

@rendermode InteractiveServer

<PageTitle>Registro de Cliente</PageTitle>

<div class="d-flex align-items-center justify-content-center min-vh-100 py-5" style="background-color: #F4EAD6;">

    <div class="col-md-10 col-lg-8 col-xl-7">

        <StatusMessage Message="@Message" />

        <div class="card card-neo p-4 p-md-5 border-0 text-center shadow-lg">

            <div class="neo-avatar-circle mb-4 mx-auto" style="width: 100px; height: 100px;">
                <img src="/imagenes/Logo.png" alt="Logo" class="rounded-circle img-fluid shadow-sm" style="width: 100%; height: 100%; object-fit: cover;" />
            </div>

            <h3 class="fw-bold mb-2" style="color: #3D5D35; letter-spacing: 1px;">CREAR CUENTA</h3>
            <p class="text-muted small mb-4">Únete al club y realiza tus pedidos (Exclusivo El Factor)</p>

            <EditForm Model="Input" method="post" OnValidSubmit="RegisterUser" FormName="register">
                <DataAnnotationsValidator />

                <div class="text-start px-2">

                    @* --- DATOS PERSONALES --- *@
                    <h5 class="fw-bold mt-4 mb-3 pb-2 border-bottom" style="color: #3D5D35; border-color: rgba(61,93,53,0.2) !important;">
                        <i class="bi bi-person-lines-fill me-2"></i>DATOS PERSONALES
                    </h5>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">NOMBRE</label>
                            <InputText @bind-Value="Input.NombreCliente" class="form-control neo-input" placeholder="Ej: Juan" />
                            <ValidationMessage For="() => Input.NombreCliente" class="text-danger small ms-3" />
                        </div>
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">APELLIDO</label>
                            <InputText @bind-Value="Input.ApellidoCliente" class="form-control neo-input" placeholder="Ej: Pérez" />
                            <ValidationMessage For="() => Input.ApellidoCliente" class="text-danger small ms-3" />
                        </div>
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">TELÉFONO</label>
                            <InputText @bind-Value="Input.TelefonoCliente" class="form-control neo-input" placeholder="809-000-0000" />
                            <ValidationMessage For="() => Input.TelefonoCliente" class="text-danger small ms-3" />
                        </div>
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">CORREO ELECTRÓNICO</label>
                            <InputText @bind-Value="Input.Email" class="form-control neo-input" placeholder="nombre@correo.com" />
                            <ValidationMessage For="() => Input.Email" class="text-danger small ms-3" />
                        </div>
                    </div>

                    @* --- DIRECCIÓN DE ENTREGA --- *@
                    <h5 class="fw-bold mt-5 mb-3 pb-2 border-bottom" style="color: #3D5D35; border-color: rgba(61,93,53,0.2) !important;">
                        <i class="bi bi-geo-alt-fill me-2"></i>DIRECCIÓN DE ENTREGA
                    </h5>

                    <div class="row g-3">

                        @* 1. MUNICIPIO *@
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">MUNICIPIO (M.T.S.)</label>

                            <div class="position-relative">
                                @* Sin clases extrañas, solo neo-input para mantener el estilo base *@
                                <InputSelect @bind-Value="SelectedMunicipio"
                                             @bind-Value:after="ValidarMunicipio"
                                             class="form-select neo-input"
                                             style="cursor: pointer; -webkit-appearance: none; appearance: none;">
                                    <option value="" selected disabled>Seleccione Municipio...</option>
                                    @foreach (var m in ListaMunicipios)
                                    {
                                        <option value="@m">@m</option>
                                    }
                                </InputSelect>

                                @* Icono Chevron *@
                                <i class="bi bi-chevron-down position-absolute top-50 end-0 translate-middle-y me-3"
                                   style="color: #3D5D35; pointer-events: none;"></i>
                            </div>

                            @if (!string.IsNullOrEmpty(ErrorMunicipio))
                            {
                                <div class="alert alert-danger mt-2 py-1 px-2 small shadow-sm">
                                    <i class="bi bi-x-circle-fill"></i> @ErrorMunicipio
                                </div>
                            }
                        </div>

                        @* 2. SECTOR *@
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">SECTOR</label>

                            @if (SectoresDisponibles.Any())
                            {
                                @* MODO ACTIVO: Lista desplegable *@
                                <div class="position-relative">
                                    <InputSelect @bind-Value="Input.Sector"
                                                 class="form-select neo-input"
                                                 style="-webkit-appearance: none; appearance: none; cursor: pointer;">
                                        <option value="" selected disabled>Seleccione su Sector</option>
                                        @foreach (var s in SectoresDisponibles)
                                        {
                                            <option value="@s">@s</option>
                                        }
                                    </InputSelect>

                                    <i class="bi bi-chevron-down position-absolute top-50 end-0 translate-middle-y me-3"
                                       style="color: #3D5D35; pointer-events: none;"></i>
                                </div>
                            }
                            else
                            {
                                @* MODO INACTIVO: Input deshabilitado simple *@
                                <input type="text" class="form-control neo-input bg-light" disabled
                                       placeholder="Seleccione Municipio..." />
                            }
                            <ValidationMessage For="() => Input.Sector" class="text-danger small ms-3" />
                        </div>

                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">CALLE</label>
                            <InputText @bind-Value="Input.CalleCliente" class="form-control neo-input" placeholder="Ej: Calle Principal" />
                            <ValidationMessage For="() => Input.CalleCliente" class="text-danger small ms-3" />
                        </div>
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">NÚMERO / APTO</label>
                            <InputText @bind-Value="Input.ViviendaCliente" class="form-control neo-input" placeholder="Ej: #12" />
                            <ValidationMessage For="() => Input.ViviendaCliente" class="text-danger small ms-3" />
                        </div>
                        <div class="col-md-12">
                            <label class="ms-3 mb-1 text-muted small fw-bold">REFERENCIA</label>
                            <InputTextArea @bind-Value="Input.DescripcionCliente" class="form-control neo-input" rows="2" placeholder="Ej: Casa azul, frente al parque..." />
                            <ValidationMessage For="() => Input.DescripcionCliente" class="text-danger small ms-3" />
                        </div>
                    </div>

                    @* --- SEGURIDAD --- *@
                    <h5 class="fw-bold mt-5 mb-3 pb-2 border-bottom" style="color: #3D5D35; border-color: rgba(61,93,53,0.2) !important;">
                        <i class="bi bi-shield-lock-fill me-2"></i>SEGURIDAD
                    </h5>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">CONTRASEÑA</label>
                            <InputText type="password" @bind-Value="Input.Password" class="form-control neo-input text-center" placeholder="••••••" />
                            <ValidationMessage For="() => Input.Password" class="text-danger small ms-3" />
                        </div>
                        <div class="col-md-6">
                            <label class="ms-3 mb-1 text-muted small fw-bold">CONFIRMAR CONTRASEÑA</label>
                            <InputText type="password" @bind-Value="Input.ConfirmPassword" class="form-control neo-input text-center" placeholder="••••••" />
                            <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger small ms-3" />
                        </div>
                    </div>

                </div>

                <div class="mt-4">
                    <button type="submit" class="profile_button w-100 py-3 fw-bold fs-5 shadow-sm"
                            style="background: #C15349; color: white;"
                            disabled="@(!EsMunicipioValido)">
                        <i class="bi bi-person-plus-fill me-2"></i> REGISTRARSE
                    </button>
                </div>

                <div class="text-center mt-3">
                    <span class="text-muted small">¿Ya tienes cuenta?</span>
                    <a href="Account/Login" class="text-decoration-none fw-bold ms-1" style="color: #3D5D35;">
                        Inicia Sesión aquí
                    </a>
                </div>

                <div style="height: 300px;"></div>

            </EditForm>
        </div>
    </div>
</div>

@code {
    private IEnumerable<IdentityError>? identityErrors;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = default!;

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    private string? Message => identityErrors is null ? null : $"Error: {string.Join(", ", identityErrors.Select(error => error.Description))}";

    // Lógica
    private string SelectedMunicipio { get; set; } = "";
    private string ErrorMunicipio { get; set; } = "";
    private bool EsMunicipioValido { get; set; } = false;
    private List<string> SectoresDisponibles { get; set; } = new();

    private List<string> ListaMunicipios = new()
    {
        "El Factor",
        "Nagua",
        "Cabrera",
        "Río San Juan"
    };

    private List<string> SectoresElFactor = new()
    {
        "Centro del Pueblo", "Pueblo Nuevo", "El Barro", "Los Pajones",
        "Los Indios", "Telanza", "San José"
    };

    protected override void OnInitialized()
    {
        PageTitleService.SetTitle("Registrar Cuenta");
        Input ??= new();
    }

    private void ValidarMunicipio()
    {
        if (SelectedMunicipio == "El Factor")
        {
            EsMunicipioValido = true;
            ErrorMunicipio = "";
            SectoresDisponibles = SectoresElFactor;
        }
        else
        {
            EsMunicipioValido = false;
            ErrorMunicipio = $"Lo sentimos, no hay servicio en {SelectedMunicipio} por el momento.";
            SectoresDisponibles = new();
            Input.Sector = "";
        }
    }

    public async Task RegisterUser(EditContext editContext)
    {
        if (SelectedMunicipio != "El Factor")
        {
            identityErrors = new List<IdentityError> { new IdentityError { Description = "Municipio no válido." } };
            return;
        }

        var user = CreateUser();

        await UserStore.SetUserNameAsync(user, Input.Email, CancellationToken.None);
        var emailStore = GetEmailStore();
        await emailStore.SetEmailAsync(user, Input.Email, CancellationToken.None);

        var result = await UserManager.CreateAsync(user, Input.Password);

        if (result.Succeeded)
        {
            var userId = await UserManager.GetUserIdAsync(user);

            var newCliente = new ProyectoFinalAplicada.Models.Cliente
            {
                UserId = userId,
                NombreCliente = Input.NombreCliente,
                ApellidoCliente = Input.ApellidoCliente,
                TelefonoCliente = Input.TelefonoCliente,
                Sector = $"{Input.Sector} (El Factor)",
                CalleCliente = Input.CalleCliente,
                ViviendaCliente = Input.ViviendaCliente,
                DescripcionCliente = Input.DescripcionCliente,
            };

            DbContext.Cliente.Add(newCliente);
            await DbContext.SaveChangesAsync();

            await UserManager.AddToRoleAsync(user, "Cliente");

            Logger.LogInformation("Usuario creado exitosamente.");

            var code = await UserManager.GenerateEmailConfirmationTokenAsync(user);
            code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));
            var callbackUrl = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("Account/ConfirmEmail").AbsoluteUri,
                new Dictionary<string, object?> { ["userId"] = userId, ["code"] = code, ["returnUrl"] = ReturnUrl });

            await EmailSender.SendConfirmationLinkAsync(user, Input.Email, HtmlEncoder.Default.Encode(callbackUrl));

            if (UserManager.Options.SignIn.RequireConfirmedAccount)
            {
                RedirectManager.RedirectTo("Account/RegisterConfirmation", new() { ["email"] = Input.Email, ["returnUrl"] = ReturnUrl });
            }
            else
            {
                await SignInManager.SignInAsync(user, isPersistent: false);
                RedirectManager.RedirectTo(ReturnUrl);
            }
        }
        else
        {
            identityErrors = result.Errors;
        }
    }

    private ApplicationUser CreateUser()
    {
        try
        {
            return Activator.CreateInstance<ApplicationUser>();
        }
        catch
        {
            throw new InvalidOperationException($"No se puede crear una instancia de '{nameof(ApplicationUser)}'.");
        }
    }

    private IUserEmailStore<ApplicationUser> GetEmailStore()
    {
        if (!UserManager.SupportsUserEmail)
        {
            throw new NotSupportedException("La UI por defecto requiere un almacén de usuarios con soporte para email.");
        }
        return (IUserEmailStore<ApplicationUser>)UserStore;
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "El correo es obligatorio")]
        [EmailAddress]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "El nombre es obligatorio")]
        public string NombreCliente { get; set; } = "";

        [Required(ErrorMessage = "El apellido es obligatorio")]
        public string ApellidoCliente { get; set; } = "";

        [Required(ErrorMessage = "El teléfono es obligatorio")]
        public string TelefonoCliente { get; set; } = "";

        [Required(ErrorMessage = "El sector es obligatorio")]
        public string Sector { get; set; } = "";

        [Required(ErrorMessage = "La calle es obligatoria")]
        public string CalleCliente { get; set; } = "";

        [Required(ErrorMessage = "El número de casa es obligatorio")]
        public string ViviendaCliente { get; set; } = "";

        [Required(ErrorMessage = "La referencia es obligatoria")]
        public string DescripcionCliente { get; set; } = "";

        [Required(ErrorMessage = "La contraseña es obligatoria")]
        [StringLength(100, ErrorMessage = "La {0} debe tener al menos {2} caracteres.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [DataType(DataType.Password)]
        [Display(Name = "Confirmar contraseña")]
        [Compare("Password", ErrorMessage = "Las contraseñas no coinciden.")]
        public string ConfirmPassword { get; set; } = "";
    }
}
@page "/Account/Manage/TwoFactorAuthentication"

@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Identity
@using ProyectoFinalAplicada1.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Autenticación 2 Pasos (2FA)</PageTitle>

<div class="d-flex align-items-center justify-content-center min-vh-100" style="margin-top: -60px;">
    
    <div class="col-md-10 col-lg-7 col-xl-6" style="margin-right: 15rem;">
        
        <StatusMessage />

        <div class="card card-neo p-4 border-0 text-center">
            
            <i class="bi bi-shield-lock-fill mb-3" style="font-size: 3rem; color: #3D5D35;"></i>
            <h3 class="fw-bold mb-4" style="color: #3D5D35;">AUTENTICACIÓN 2FA</h3>

            @if (canTrack)
            {
                if (is2faEnabled)
                {
                    if (recoveryCodesLeft == 0)
                    {
                        <div class="alert alert-danger rounded-4 border-0 shadow-sm mb-4">
                            <strong>No te quedan códigos de recuperación.</strong>
                            <p>Debes <a href="Account/Manage/GenerateRecoveryCodes" class="fw-bold text-danger">generar nuevos códigos</a> antes de iniciar sesión con uno.</p>
                        </div>
                    }
                    else if (recoveryCodesLeft == 1)
                    {
                        <div class="alert alert-danger rounded-4 border-0 shadow-sm mb-4">
                            <strong>Te queda 1 código.</strong>
                            <p>Puedes <a href="Account/Manage/GenerateRecoveryCodes" class="fw-bold text-danger">generar nuevos</a>.</p>
                        </div>
                    }
                    else if (recoveryCodesLeft <= 3)
                    {
                        <div class="alert alert-warning rounded-4 border-0 shadow-sm mb-4">
                            <strong>Te quedan @recoveryCodesLeft códigos.</strong>
                            <p>Deberías <a href="Account/Manage/GenerateRecoveryCodes" class="fw-bold text-dark">generar nuevos</a>.</p>
                        </div>
                    }

                    if (isMachineRemembered)
                    {
                        <form style="display: inline-block" @formname="forget-browser" @onsubmit="OnSubmitForgetBrowserAsync" method="post">
                            <AntiforgeryToken />
                            <button type="submit" class="profile_button mb-3" style="background: #C15349; color: white;">Olvidad este navegador</button>
                        </form>
                    }

                    <div class="d-grid gap-2 col-10 mx-auto">
                        <a href="Account/Manage/Disable2fa" class="profile_button text-center text-decoration-none mb-2" style="color: #C15349;">Desactivar 2FA</a>
                        <a href="Account/Manage/GenerateRecoveryCodes" class="profile_button text-center text-decoration-none">Resetear Códigos</a>
                    </div>
                }

                <h5 class="fw-bold mt-4 mb-3 text-muted">Aplicación de Autenticación</h5>
                <div class="d-grid gap-2 col-10 mx-auto">
                    @if (!hasAuthenticator)
                    {
                        <a href="Account/Manage/EnableAuthenticator" class="profile_button text-center text-decoration-none">Agregar App Autenticadora</a>
                    }
                    else
                    {
                        <a href="Account/Manage/EnableAuthenticator" class="profile_button text-center text-decoration-none mb-2">Configurar App</a>
                        <a href="Account/Manage/ResetAuthenticator" class="profile_button text-center text-decoration-none" style="color: #C15349;">Resetear App</a>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger rounded-4">
                    <strong>Política de privacidad no aceptada.</strong>
                    <p>Debes aceptar la política antes de activar 2FA.</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool canTrack;
    private bool hasAuthenticator;
    private int recoveryCodesLeft;
    private bool is2faEnabled;
    private bool isMachineRemembered;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var user = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        canTrack = HttpContext.Features.Get<ITrackingConsentFeature>()?.CanTrack ?? true;
        hasAuthenticator = await UserManager.GetAuthenticatorKeyAsync(user) is not null;
        is2faEnabled = await UserManager.GetTwoFactorEnabledAsync(user);
        isMachineRemembered = await SignInManager.IsTwoFactorClientRememberedAsync(user);
        recoveryCodesLeft = await UserManager.CountRecoveryCodesAsync(user);
    }

    private async Task OnSubmitForgetBrowserAsync()
    {
        await SignInManager.ForgetTwoFactorClientAsync();
        RedirectManager.RedirectToCurrentPageWithStatus(
            "El navegador actual ha sido olvidado. Se te pedirá código 2FA la próxima vez.",
            HttpContext);
    }
}